<% if current_user %>
<% username = current_user.username %>
  <script type="text/javascript">
    window.user = {
      username: "<%=username%>",
      id: <%= current_user.id %>
    };
  </script>
<% else %>
  <script type="text/javascript">
    window.user = {
      username: undefined,
    };
  </script>
<% end %>

<div id='root'>
</div>
